<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="style.css">
</head>

<body class="bg-light">

    <!-- Header -->
    <header class="bg-white text-dark py-3">
        <div class="container d-flex flex-wrap justify-content-between align-items-center">
            <h2 class="mb-0">
                <a href="/" class="text-primary text-decoration-none pacifico-font ">TaquiScience</a>
                <span class="text-dark">Academy</span>
            </h2>
            <nav>
                <a href="/" class="btn border-primary btn-sm me-2 text-primary button">Home</a>
                <a href="/logout" class="btn border-primary btn-sm text-primary button">Log Out</a>
            </nav>
        </div>
    </header>
    <% if (errors && errors.length> 0) { %>
        <% errors.forEach(function(error) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <%= error %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <% }); %>
                <% } %>


                    <!-- Main Content -->
                    <main>
                        <div class="row justify-content-center">
                            <div class="col-md-6 col-lg-5">
                                <form action="/forget" method="POST" class="container mt-5 bg-white">


                                    <fieldset>
                                        <legend class="fw-bold text-center">Reset Password</legend>
                                        <div class="mb-3">
                                            <label for="email" class="form-label mt-3">Enter your registered
                                                email</label>
                                            <input type="email" class="form-control" name="useremail" required>
                                        </div>
                                        <div class="mb-3">
                                            <label for="password" class="form-label">Password</label>
                                            <input type="password" id="password" name="password" class="form-control"
                                                autocomplete="off" required>
                                        </div>

                                        <div class="mb-3">
                                            <label for="c_password" class="form-label">Confirm Password</label>
                                            <input type="password" id="c_password" name="c_password"
                                                class="form-control" autocomplete="off" required>
                                        </div>

                                        <div class="form-check mb-4">
                                            <input class="form-check-input" type="checkbox" id="showPassword"
                                                onclick="togglePassword()">
                                            <label class="form-check-label" for="showPassword">
                                                Show Password
                                            </label>
                                        </div>


                                        <div class="d-grid mb-5">
                                            <button type="submit mb-4 mt-3" class="btn btn-primary">Submit</button>
                                        </div>
                                    </fieldset>
                                </form>
                            </div>
                        </div>
                    </main>
                    <%- include('includes/footer') %>
</body>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const showPasswordCheckbox = document.getElementById("showPassword");
        const passwordInput = document.getElementById("password");
        const confirmPasswordInput = document.getElementById("c_password");

        showPasswordCheckbox.addEventListener("change", function () {
            const type = this.checked ? "text" : "password";
            passwordInput.type = type;
            confirmPasswordInput.type = type;
        });
    });
</script>

</html>