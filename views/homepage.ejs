<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>SignUp</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="style.css">
</head>

<body class="bg-light">

  <div class="bg-white text-dark py-3 sticky-top">
    <div class="container d-flex flex-wrap justify-content-between align-items-center">
      <h2 class="mb-0">
        <a href="/" class="text-primary text-decoration-none pacifico-font ">TaquiScience</a>
        <span class="text-dark">Academy</span>
      </h2>
      <nav>
        <a href="/" class="btn border-primary btn-sm me-2 text-primary button">Home</a>
        <a href="/login" class="btn border-primary btn-sm text-primary button">Login</a>
      </nav>
    </div>
  </div>

  <main class="container py-5">
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-5">
        <form action="/register" method="post" class="bg-white p-4 rounded shadow-sm">

          <!-- Show errors if any -->
          <% errors.forEach(error=> { %>
            <p class="alert alert-danger py-1 mb-2">
              <%= error %>
            </p>
            <% }) %>

              <fieldset>
                <legend class="fw-bold text-center">Create an Account</legend>

                <div class="mb-3">
                  <label for="username" class="form-label">Full Name</label>
                  <input type="text" id="username" name="username" class="form-control" autocomplete="off" required>
                </div>

                <div class="mb-3">
                  <label for="useremail" class="form-label">Email</label>
                  <input type="email" id="useremail" name="useremail" class="form-control" autocomplete="off" required>
                </div>

                <div class="mb-3">
                  <label for="password" class="form-label">Password</label>
                  <input type="password" id="password" name="password" class="form-control" autocomplete="off" required>
                </div>

                <div class="mb-4">
                  <label for="c_password" class="form-label">Confirm Password</label>
                  <input type="password" id="c_password" name="c_password" class="form-control" autocomplete="off"
                    required>
                </div>

                <div class="form-check mb-4">
                  <input class="form-check-input" type="checkbox" id="showPassword" onclick="togglePassword()">
                  <label class="form-check-label" for="showPassword">Show Password</label>
                </div>


                <div class="d-grid">
                  <button type="submit" class="btn btn-primary">Signup</button>
                </div>
              </fieldset>
        </form>
      </div>
    </div>
  </main>

  <%- include('includes/footer') %>

    <!-- Bootstrap Bundle JS (optional for components like dropdowns) -->
    <script>
      function togglePassword() {
        const password = document.getElementById("password");
        const confirm = document.getElementById("c_password");

        const type = password.type === "password" ? "text" : "password";
        password.type = type;
        confirm.type = type;
      }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>